<?xml version="1.0" encoding="utf-8"?>
<DataForm DataType="BarcodeScanner.PFTest, BarcodeScanner" Priority="1" ViewType="Form"
		  xmlns="http://www.enova.pl/schema/form.xsd">
	<Page Name="Params" CaptionHtml="Params" DataContext="{DataSource}">
		<Label CaptionHtml="Welcome to Barcode Scanner by OM."/>
		<Field EditValue="{Code}" Width="30" CaptionHtml="Last scanned code" IsReadOnly="true" />
		<Row>
			<Command CaptionHtml="Usuń z listy" MethodName="DeleteItem" Width ="30"/>
			<Command CaptionHtml="Generuj PZ" MethodName="GeneratePZDifferentWay" Width ="30"/>
		</Row>
		
		<Grid Width="*" Height="*" EditValue="{Items}" IsToolbarVisible="true" EditButton="None" NewButton="None" RemoveButton="None" SelectedValue="{SelectedItems}" FocusedValue="{FocusedItem}">
			<Field CaptionHtml="Kod" Width="9" EditValue="{Kod}" Footer="None" />
			<Field CaptionHtml="Nazwa" Width="23" EditValue="{Nazwa}" Footer="None" />
			<Field CaptionHtml="EAN" Width="17" EditValue="{EAN}" Footer="None" />
		</Grid>
	</Page>
</DataForm>

